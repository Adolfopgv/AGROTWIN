<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeleccionadoInvernadero"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">

        <!-- TODO: Update blank fragment layout -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp">

            <TextView
                android:id="@+id/Actual"
                android:layout_width="142dp"
                android:layout_height="0dp"
                android:layout_marginStart="134dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="135dp"
                android:layout_marginBottom="44dp"
                android:gravity="center"
                android:text="Actual"
                android:textSize="34sp"
                app:layout_constraintBottom_toTopOf="@+id/humedadAire"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/temperatura"
                android:layout_width="68dp"
                android:layout_height="32dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="temperatura"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/temperaturaFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_gallery"
                app:layout_constraintStart_toEndOf="@+id/temperatura"
                app:layout_constraintTop_toTopOf="@+id/temperatura" />

            <TextView
                android:id="@+id/humedadTierra"
                android:layout_width="56dp"
                android:layout_height="30dp"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="humedadTierra"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/humedadAire" />

            <ImageView
                android:id="@+id/humedadAireFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="56dp"
                android:src="@android:drawable/ic_menu_gallery"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/humedadAire"
                android:layout_width="57dp"
                android:layout_height="30dp"
                android:layout_marginBottom="527dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="humedadAire"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/Actual" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="92dp"
                android:src="@android:drawable/ic_menu_gallery"
                app:layout_constraintBottom_toTopOf="@+id/barraGrafica"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/Historial"
                android:layout_width="142dp"
                android:layout_height="49dp"
                android:layout_marginStart="134dp"
                android:layout_marginEnd="135dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Historial"
                android:textSize="34sp"
                app:layout_constraintBottom_toTopOf="@+id/barraGrafica"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/Home_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="97dp"
                android:layout_marginBottom="30dp"
                android:text="Home Fragment"
                android:textColor="#8BC34A"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.example.myalmeria.barras.BarGraph
                android:id="@+id/barraGrafica"
                android:layout_width="339dp"
                android:layout_height="145dp"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="156dp"
                app:layout_constraintBottom_toTopOf="@+id/Home_fragment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/favoritos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@android:drawable/btn_star"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</LinearLayout>